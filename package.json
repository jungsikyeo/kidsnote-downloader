{
  "name": "kidsnote-downloader",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build-python": "pyinstaller --onefile main.py",
    "build": "npm run build-python && electron-builder"
  },
  "devDependencies": {
    "electron": "^24.1.2",
    "electron-builder": "^22.0.0"
  },
  "build": {
    "appId": "com.yjs.kidsnote.downloader",
    "productName": "Kidsnote Downloader",
    "directories": {
      "output": "build"
    },
    "files": [
      "**/*"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "mac": {
      "target": [
        "dmg"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    },
    "extraResources": [
      {
        "from": "dist/main.exe",
        "to": "main.exe"
      }
    ]
  }
}
